# Routes
# This file defines all application routes (Higher priority routes first)
GET     /                       controllers.ProductController.index
GET     /products               controllers.ProductController.availableProducts()
GET     /products               controllers.ProductController.showAll()
GET     /product/:id            controllers.ProductController.showById(id: Long)
GET     /products/:id           controllers.ProductController.delete(id: Long)
GET     /addProductForm         controllers.ProductController.simpleForm()
POST    /addProductForm         controllers.ProductController.productFormPost()
GET     /editProductForm/:id    controllers.ProductController.filledForm(id: Long)
POST    /editProductForm/       controllers.ProductController.filledFormPut()

GET     /categories             controllers.CategoryController.availableCategories()
GET     /categories             controllers.CategoryController.showAll()
GET     /category/:id           controllers.CategoryController.showById(id: Long)
GET     /categories/:id         controllers.CategoryController.delete(id: Long)
GET     /addCategoryForm        controllers.CategoryController.simpleForm()
POST    /addCategoryForm        controllers.CategoryController.categoryFormPost()
GET     /editCategoryForm/:id   controllers.CategoryController.filledForm(id: Long)
POST    /editCategoryForm/      controllers.CategoryController.filledFormPut()

GET     /baskets                controllers.BasketController.availableBaskets()
GET     /baskets                controllers.BasketController.showAll()
GET     /basket/:id             controllers.BasketController.showById(id: Long)
GET     /basket/:id/:basket     controllers.BasketController.deleteProduct(id: Long, basket: Long)
GET     /baskets/:id            controllers.BasketController.delete(id: Long)
GET     /addBasketForm          controllers.BasketController.simpleForm()
POST    /addBasketForm          controllers.BasketController.basketFormPost()
GET     /editBasketForm/:id     controllers.BasketController.filledForm(id: Long)
POST    /editBasketForm/        controllers.BasketController.filledFormPut()